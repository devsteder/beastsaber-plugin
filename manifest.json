{
  "manifest_version": 2,
  "name": "BeastSaber Links",
  "description": "Add links on your ScoreSaber user profile to quickly rate songs on BeastSaber.",
  "version": "0.1",
  "author": "devsteder",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://scoresaber.com/u/*",
        "https://scoresaber.com/u/*"
      ],
      "css": [
        "beastsaber-ext.css"
      ],
      "js": ["scoreSaber.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}